<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>@ViewBag.Title</title>
        <link rel="stylesheet" href="http://code.jquery.com/mobile/1.1.0/jquery.mobile-1.1.0.min.css" />
        <style>
            /* App custom styles */
        </style>
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
        <script type="text/javascript">
            // do not handle links via ajax by default
            $(document).bind("mobileinit", function () { $.mobile.ajaxEnabled = false; });
        </script>
        <script src="http://code.jquery.com/mobile/1.1.0/jquery.mobile-1.1.0.min.js"></script>
    </head>
    <body>
        <div>
            <div data-theme="a" data-role="header" data-position="fixed">
                <h3>
                    @Html.ActionLink("Home", "Index", "Home") &nbsp;  USA @ViewBag.UsaTotal <br/> CAN @ViewBag.CanTotal <br/> @ViewBag.InProgress Active Games Remaining  
                </h3>
            </div>
            @RenderBody()
        </div>
        <script>
            $(document).ready(function () {
                $('a').attr('data-theme', 'c').attr('data-transition','slide').attr('rel','external');
                @RenderSection("OnDocumentReady", required: false)
            });
        </script>
    </body>
</html>